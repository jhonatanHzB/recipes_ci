{
	"name": "recipes_ci",
	"version": "1.0.0",
	"description": "## What is CodeIgniter?",
	"main": "index.js",
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build:js": "esbuild public/assets/js/app.js --bundle --minify --sourcemap --outfile=public/assets/js/app.min.js",
		"build:css": "esbuild public/assets/css/styles.css --minify --sourcemap --outfile=public/assets/css/styles.min.css",
		"build": "npm run build:js && npm run build:css",
		"dev": "esbuild public/assets/js/app.js --bundle --outfile=public/assets/app.js --sourcemap=inline --watch",
		"minify:js": "terser",
		"minify:css": "cssnano",
		"minify:all": "npm run minify:js && npm run minify:css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jhonatanHzB/recipes_ci.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/jhonatanHzB/recipes_ci/issues"
	},
	"homepage": "https://github.com/jhonatanHzB/recipes_ci#readme",
	"devDependencies": {
		"cssnano-cli": "^1.0.5",
		"esbuild": "^0.25.9",
		"terser": "^5.44.1"
	}
}
