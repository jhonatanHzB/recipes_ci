{
	"semi": true,
	"singleQuote": false,
	"tabWidth": 4,
	"useTabs": true,
	"printWidth": 80,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"endOfLine": "lf",

	"overrides": [
		{
			"files": "*.css",
			"options": {
				"tabWidth": 4,
				"useTabs": true
			}
		},
		{
			"files": "*.scss",
			"options": {
				"tabWidth": 4,
				"useTabs": true
			}
		},
		{
			"files": "*.less",
			"options": {
				"tabWidth": 4,
				"useTabs": true
			}
		}
	]
}
